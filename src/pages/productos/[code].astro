import { premium, executivePlus } from "../../components/CardsData.astro";
import Layout from '../../layouts/Layout.astro';

const { product } = Astro.props;

export async function getStaticPaths() {
  const premiumPaths = premium.map(product => ({ params: { code: product.code } }));
  const executivePlusPaths = executivePlus.map(product => ({ params: { code: product.code } }));
  return [
    ...premiumPaths,
    ...executivePlusPaths,
  ];
}

export async function get({ params }) {
  const product = premium.find(p => p.code === params.code) || executivePlus.find(p => p.code === params.code);

  if (!product) {
    return { notFound: true };
  }

  return {
    props: {
      product,
    },
  };
}
