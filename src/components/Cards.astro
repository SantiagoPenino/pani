---
interface Props {
  code: string;
  imgSrc: string;
  imgAlt: string;
  price: string;
  size: string;
  bedrooms: string;
  bathrooms: string;
}

const {code, imgSrc, imgAlt, price, size, bedrooms, bathrooms } = Astro.props;
---
<a href={`/productos/${code}`} class="block">
<div class="flex flex-col p-4 rounded transition-transform hover:scale-110">
  <img class="w-80 rounded-t-lg object-cover" src=`/productos/${imgSrc}.webp` alt={imgAlt} />
  <div
    class="flex w-80 bg-custom-gray text-white justify-between p-3 rounded-b-lg"
  >
    <div>
      <p>{`U$S ${price}`}</p>
    </div>
    <div class="flex">
      <p>{`${size}mÂ²`}</p>
      <div class="h-6 w-1 bg-custom-blue mx-2"></div>
      <p>{`${bedrooms}D`}</p>
      <div class="h-6 w-1 bg-custom-blue mx-2"></div>
      <p>{`${bathrooms}B`}</p>
    </div>
  </div>
</div>
</a>
