---
interface Props {
  code: string;
  imgAlt: string;
  price: string;
  size: string;
  bedrooms: string;
  bathrooms: string;
  category: string;
}

const { code, imgAlt, price, size, bedrooms, bathrooms, category } = Astro.props;
---

<a href={`/${code}`} class="block">
  <div
    class="flex flex-col py-4 md:p-4 lg:p-6 rounded transition-transform items-center w-full flex-grow"
  >
    <div class="w-full h-full overflow-hidden">
      <img
        class="w-full -mb-1 md:rounded-t-sm object-cover lg:hover:scale-150 transition-transform duration-300" 
        src=`/productos/${category}/${code}.webp`
        alt={imgAlt}
      />
    </div>
    <div
      class="w-full flex bg-custom-gray text-white justify-between p-3 md:rounded-b-sm"
    >
      <div class="flex items-center">
        <p>{`U$S ${price}`}</p>
      </div>
      <div class="flex items-center">
        <p>{`${size}mÂ²`}</p>
        <div class="h-6 w-1 bg-custom-blue mx-1 flex items-center"></div>
        <>{bedrooms}<img class="pl-1 h-5" src="/productos/icons/bedroom.svg" alt="bed icon" /></>
        <div class="h-6 w-1 bg-custom-blue mx-1 items-center"></div>
        <>{bathrooms}<img class="pl-1 h-5" src="/productos/icons/bathroom.svg" alt="bath icon"/></>
      </div>
    </div>
  </div>
</a>
