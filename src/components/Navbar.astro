---
import CallToAction from "./CallToAction.astro";
---

<nav
  class="absolute overflow-hidden w-full h-0 top-full left-0 lg:top-0 lg:w-auto bg-white lg:h-auto lg:relative lg:flex"
>
  <ul
    class="flex flex-col h-full lg:flex-row lg:space-x-5 justify-center lg:justify-between items-center text-lg uppercase lg:normal-case py-20 lg:py-4 font-bold px-2"
  >
    <li class="flex-grow lg:flex-none lg:hover:text-custom-blue relative group">
      <a href="/">Inicio</a><span
        class="block lg:group-hover:scale-x-100 transition-transform origin-left h-1 bg-custom-blue absolute bottom-0 left-0 right-0 scale-x-0"
      ></span>
    </li>
    <li class="flex-grow lg:flex-none lg:hover:text-custom-blue relative group">
      <a href="/servicios">Servicios</a><span
        class="block lg:group-hover:scale-x-100 transition-transform origin-left h-1 bg-custom-blue absolute bottom-0 left-0 right-0 scale-x-0"
      ></span>
    </li>
    <li class="flex-grow lg:flex-none lg:hover:text-custom-blue relative group">
      <a href="/proyectos">Proyectos</a><span
        class="block lg:group-hover:scale-x-100 transition-transform origin-left h-1 bg-custom-blue absolute bottom-0 left-0 right-0 scale-x-0"
      ></span>
    </li>
    <li class="flex-grow lg:flex-none lg:hover:text-custom-blue relative group">
      <a href="/steelframing">Steel Framing</a><span
        class="block lg:group-hover:scale-x-100 transition-transform origin-left h-1 bg-custom-blue absolute bottom-0 left-0 right-0 scale-x-0"
      ></span>
    </li>
    <CallToAction />
  </ul>
</nav>


